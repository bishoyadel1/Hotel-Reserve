@using HotelReserseTask.Models;
@model BookingViewModel

<section class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h3 class="text-center mb-4">Book Your Stay</h3>

                <form id="bookingForm">
                    <input type="number" id="RoomId" value="@ViewBag.Id" hidden />
                    <div class="mb-3">
                        <label class="form-label">Check-In Date</label>
                        <input type="date" class="form-control" id="CheckInDate" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Check-Out Date</label>
                        <input type="date" class="form-control" id="CheckOutDate" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Number of Adults</label>
                        <input type="number" class="form-control" id="Adults" min="1" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Number of Children</label>
                        <input type="number" class="form-control" id="Children" min="0" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Number of Rooms</label>
                        <input type="number" class="form-control" id="TotalRooms" min="1" required />
                    </div>
                    <button type="button" id="addToBasket" class="btn btn-secondary w-100 mx-1" style="background-color:blueviolet; margin-bottom:10px;">Add To Basket</button>
                    <button type="submit" id="bookNow" class="btn btn-primary w-100 mx-1 ">Book Now</button>

                </form>

                <!-- Message Display -->
                <div id="bookingMessage" class="mt-3"></div>
            </div>
        </div>
    </div>
</section>